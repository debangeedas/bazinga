<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EcgRecord3">

    <ImageView
        android:id="@+id/ecg_graph_result"
        android:layout_width="600dp"
        android:layout_height="250dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <Button
        android:id="@+id/back_to_home_ecg"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_button"
        android:text="Back to Home"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ecg_graph_result"
        app:layout_constraintTop_toBottomOf="@+id/ecg_graph_result"/>

    <Button
        android:id="@+id/share_ecg"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ecg_graph_result"
        app:layout_constraintTop_toBottomOf="@+id/ecg_graph_result"
        android:background="@drawable/primary_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>